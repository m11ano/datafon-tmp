server {
    listen 80;
    server_name datafone.ru www.datafone.ru;
    rewrite ^ https://datafone.ru$request_uri? permanent;
}


server {
    listen 443 ssl;
    server_name www.datafone.ru;
    return 301 https://datafone.ru$request_uri;
    ssl_certificate /etc/letsencrypt/live/www.datafone.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.datafone.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {

	server_name datafone.ru;

	location / {
		include proxy_params;
    
    	proxy_pass http://127.0.0.1:3000;
	}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/datafone.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/datafone.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
